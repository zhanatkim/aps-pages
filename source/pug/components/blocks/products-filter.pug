  -
    const searchData = {
      "ru": "Поиск",
      "en": "Search",
      "kz": "Іздеу"
    }
  .products-filter
    each value, key in searchData
      if lang === key
        +search({
          input: {
            inputLabel: "",
            inputName: "search",
            inputPlaceholder: value,
            classMods: ["hidden-label"],
          },
          btn: {},
        })(class="products-filter__search")
    .products-filter__wrapper
      form(action="#" method="post")
        .products-filter__inner
          each input in data
            each value, key in input.content
              if lang === key
                +custom-toggle({
                  inputName: "product-sort",
                  inputValue: input.sort,
                  inputId: input.id,
                  inputLabel: value
                })(class="products-filter__toggle")
        each value, key in resets
          if lang === key
            +btn({text: value, type: "reset"})(class="btn--dark products-filter__btn-reset")
        each value, key in submits
          if lang === key
            +btn({text: value, type: "button"})(class="btn--dark products-filter__btn-submit")

        },
        "en": {
          title: "Reagents for drilling and oil production",
          text: "own production, selection and supply of reagents for drilling, casing, completion, workover, ORS, killing fluids, production chemicals.",
          btn: "More details",
        },
        "kz": {
          title: "Бұрғылау және мұнай өндіруге арналған реагенттер",
          text: "бұрғылау, қаптау, аяқтау, өңдеу, ОРС, өлтіру сұйықтықтары, өндірістік химикаттар үшін реагенттерді өндіру, таңдау және жеткізу.",
          btn: "толығырақ",
        }
      },
    ]
  .hero
    .hero__swiper.swiper
      .swiper-wrapper.hero__wrapper
        each slide, index in slides
          each value, key in slide
            if lang === key
              .swiper-slide.hero__slide.hero-slide
                .hero-slide__wrapper
                  .hero-slide__inner
                    h2.hero-slide__title.title.title--large!=value.title
                    p.hero-slide__text!=value.text
                    +btn({href: slide.href, text: `${value.btn}`})(class="btn--arrow hero-slide__btn")
                      +icon("arrow", 9, 16, lang)
                .hero-slide__image
                  +picture("slides", `hero${index + 1}`, "jpg", 1642, 923, "petroleum refinery", lang)
      .hero__pagination.swiper-pagination


      link(rel="manifest" href="favicon/site.webmanifest" crossorigin="use-credentials")
      link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#3a3838")
      link(rel="shortcut icon" href="favicon/favicon.ico")

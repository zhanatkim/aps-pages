        meta(property="og:type", content="website")
        meta(property="og:url", content="https://asiapetroservice.kz/")
        meta(property="og:description", content="Услуги по изготовлению и контролю за качеством буровых растворов, ремонтно-изоляционных работ и обработки скважин...")
      else if (lang === "en")
        meta(property="og:title", content="Asia Petro Service - well and pipeline treatment, drilling fluids.")
        meta(property="og:image", content="https://asiapetroservice.kz/en/img/content/about-hero.jpg")
        meta(property="og:type", content="website")
        meta(property="og:url", content="https://asiapetroservice.kz/")

    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content=description)
    if (lang === "kz")
      link(rel="alternate", hreflang="en", href=`https://asiapetroservice.kz/en/${page}.html`)
      link(rel="canonical", hreflang="ru", href=`https://asiapetroservice.kz/${page}.html`)
